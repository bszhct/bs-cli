{
  "name": "@bszhct/cli",
  "version": "0.0.2",
  "description": "骆驼自己的前端工程化命令行工具",
  "scripts": {
    "dev": "tsc --watch",
    "tsc": "tsc",
    "eslint": "eslint . --ext .ts,.tsx",
    "es:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run eslint",
      "git add"
    ]
  },
  "bin": {
    "bs": "./bin/bs"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "ISC",
  "author": "bszhct",
  "dependencies": {
    "@bszhct/template-base": "0.0.2",
    "caporal": "1.3.0",
    "chalk": "3.0.0",
    "download-git-repo": "3.0.2",
    "fs-extra": "8.1.0",
    "inquirer": "7.0.0",
    "lodash": "4.17.15",
    "pushstate-server": "3.1.0",
    "update-notifier": "3.0.1"
  },
  "files": [
    "bin",
    "lib"
  ],
  "eslintIgnore": [
    "bin",
    "lib"
  ]
}
