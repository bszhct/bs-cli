{
  "name": "@bszhct/cli",
  "version": "0.1.1",
  "description": "骆驼的哈乐园",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "eslint": "eslint . --ext .ts,.tsx",
    "es:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run eslint",
      "git add"
    ]
  },
  "bin": {
    "bs": "./bin/bs"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "ISC",
  "author": "bszhct",
  "dependencies": {
    "@bszhct/template-base": "0.0.2",
    "caporal": "1.3.0",
    "chalk": "3.0.0",
    "download-git-repo": "3.0.2",
    "fs-extra": "8.1.0",
    "inquirer": "7.0.0",
    "lodash": "4.17.15",
    "pushstate-server": "3.1.0",
    "update-notifier": "3.0.1"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {},
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "useJSXTextNode": true,
      "project": "tsconfig.json"
    },
    "globals": {
      "document": false,
      "window": false
    }
  },
  "files": [
    "bin",
    "lib"
  ],
  "eslintIgnore": [
    "bin",
    "lib"
  ],
  "devDependencies": {
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  }
}
